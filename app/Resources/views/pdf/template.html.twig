            <td class="header">
                <span id="date">Date: {{date|date("d/m/Y")}}</span><br>
                <span id="exp2">Expediteur: {{fromName}}  {{email}}</span><br>
                <span  class="liste-contact"> Liste-contact: {{listContact}}</span><br>
                <span class="email">Modèle d'e-mail: {{name}}</span> <br>
                <span class="objet">Objet: {{sujet}}</span><br>
            </td>
        </tr>
    </table>
    <table>
         <tr>
             <td>&nbsp;</td>
        </tr>
         <tr>
