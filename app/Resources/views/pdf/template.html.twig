             <td>&nbsp;</td>
        </tr>
         <tr>
             <td>&nbsp;</td>
        </tr>
    </table>
        <table>
            <tr>
                <td class="total">
                    <table >
                        <tr>
                             <td class="titreT">{{"total"|upper}}</td>
                        </tr>
                            {% if status["ProcessedCount"] > 0 %}
                                {% set val = status["ProcessedCount"]%} 
                       
                            {% set val = status["ProcessedCount"]%} 
                            {% else %}
                                {% set val = 0 %}  
                            {% endif %}
                        <tr>
                            <td class="titreT"><h4>{{val}}</h4></td>
                        </tr>
                        <tr>
                             <td class="mailTot"><p>e-mails</p></td>  
                        </tr> 
                     </table> 
                </td>
                <td class="delivrer">
                    <table >
                        <tr>
                            <td class="titreDel">{{"délivrés"|upper}}</td>
                        </tr>
                            {% set delivre = 0 %}
                            {% if status['ProcessedCount'] > 0 %}
                                {% set delivre = status['DeliveredCount'] / status['ProcessedCount']*100 %}
                            {% endif %}
                         <tr>
                            <td class="titreDel"><h4>{{status['DeliveredCount']}}</h4></td>
                        </tr>
                        <tr>
                             <td class="mailTot"><p>{{delivre~' %'}}</p></td>  
                        </tr> 
                    </table>                   
                </td>
                <td class="ouvert">
                    <table >
                        <tr>
                            <td class="valOuv">{{"ouverts"|upper}}</td>
                        </tr>
                            {% set ouvrer = 0 %}
                            {% if status['ProcessedCount'] > 0 %}
                                {% set ouvrer = status['OpenedCount'] /status['ProcessedCount']*100 %} 
                            {%  endif %}
                         <tr>
                             <td class="valOuv"><h4>{{status["OpenedCount"]}}</h4></td>
                        </tr>
                        <tr>
                             <td class="mailTot"><p>{{ouvrer~' %'}}</p></td>  
                        </tr>  

                    </table>
                    
                </td>
                <td class="clique">
                    <table >
                        <tr>
                            <td class="valClik">{{"cliqués"|upper}}</td>
                        </tr>
                        {% set clique = 0 %}
                            {% if status['ProcessedCount'] > 0 %}
                                {% set clique = status['ClickedCount'] / status['ProcessedCount']*100 %}
                        {% endif %}
                         <tr>
                            <td class="valClik"><h4>{{status['ClickedCount']}}</h4></td>
                        </tr>
                         <tr>
                            <td class="mailTot"><p>{{clique~' %'}}</p></td>  
                        </tr>  
                    </table>                      
                </td>
                <td class="bloque"> 
                    <table>
                        <tr>
                            {% set bloque = 0 %}
                            {% if status['ProcessedCount'] > 0 %}
                                {% set bloque = status['BlockedCount'] / status['ProcessedCount']*100 %}
                            {% endif %}
                         <td id="titreEtat">{{"bloqués"|upper}} <span id="valBlock">{{bloque~' %'}}</span></td>                           
                        </tr>
                        <tr>
                            {% set erreur = 0 %}
                            {% if status['ProcessedCount'] > 0 %}
                                {% set erreur = status['BouncedCount'] / status['ProcessedCount']*100 %}
                            {% endif %}
                            <td class="blErr">{{"erreurs"|upper}} <span id="erreur">{{erreur~' %'}}</span></td>
                        </tr>
                        <tr>
                            {% set desabo = 0 %}
                            {% if status['ProcessedCount'] > 0 %}
                                {% set desabo = status['UnsubscribedCount'] / status['ProcessedCount']*100 %}
                            {% endif %}
                            <td class="blDesa">{{"désabo."|upper}} <span id="desabo">{{desabo~' %'}}</span></td>
                        </tr>
                        <tr>
                            {% set spam = 0 %}
                        {% if status['ProcessedCount'] > 0 %}
                            {% set spam = status['SpamComplaintCount'] / status['ProcessedCount']*100%}
                        {% endif %}
                        <td class="blSpam">{{"spam"|upper}} <span id="spam">{{spam~' %' }}</span></td>
                        </tr>
                    </table>
                </td>
            </tr>             
        </table>   
