<div class = "row separator"></div>
<div class="row">
	<div class="col-8 col-lg-4 col-md-4 col-sm-4 col-xl-4 titre-section-sondage-quiz">
		<span>QUESTION __question_num__<input class = "iterationQuestionForm" type = "hidden" name = "iterationQuestionForm" value = "0"></span>
	</div>
	
	<div class="col-4 col-lg-8 col-md-8 col-sm-8 col-xl-8">
		<div id = "ligne-separator-question-__opt_questions__" class = "ligne-separator-question">&nbsp;</div>
	</div>
</div>

<div id = "content-questionnaire-__opt_questions__" class = "content-questionnaire">
	<div class = "row separator"></div>
	
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
			<label class="champForm">
				<span class="lib-form">votre question</span>
				{{ form_widget(form.questions, {'attr': {'class': 'input-form-text'}}) }}
				<span class="delete-input"></span>
			</label>
		</div>
	</div>
	
	<div class = "row separator"></div>
	
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
			<label class="champForm">
				<span class="lib-form">commentaire</span>
				{{ form_widget(form.commentaire, {'attr': {'class': 'small-textarea'}}) }}
			</label>
		</div>
	</div>
	
	<div class = "row separator"></div>
	
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
			<label class="champForm">
				<span class="lib-form">type de question</span>
				<span class = "content-dropdown-toggle dropdown clearable filtres">
					<button class="btn btn-secondary dropdown-toggle dropdownMenuActionTypeQuestion" type="button" id="dropdownMenuActionTypeQuestion-__opt_questions__" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-default="ACTIONS">
						cases à cocher
					</button>
					<div id = "dropdownMenuListeTypeUestion-__opt_questions__" class="dropdown-menu dropdownMenuListeTypeUestion" aria-labelledby="dropdownMenuListeTypeUestion">
						<a class="dropdown-item" data-id = "__opt_questions__" href="#">
							cases à cocher
						</a>
						<a class="dropdown-item" data-id = "__opt_questions__" href="#">
							échelle linéaire
						</a>
						<a class="dropdown-item" data-id = "__opt_questions__" href="#">
							tableau à choix mutltiples
						</a>
					</div>
				</span>
			</label>
			{{ form_widget(form.type_question, {'attr': {'class': 'hidden'}}) }}
		</div>
	</div>
	
	<div class = "row separator"></div>
	<div class = "row separator"></div>
	
	<input id = "nbre_reponses_par_questions___opt_questions__" class = "nbre_reponses_par_questions" type = "hidden" value = "0">
	
	<div id="collectionReponses-__opt_questions__" data-prototype-reponse="{% filter escape %} {{ include('AdminBundle:PartialPage/SiteFormField:reponses-sondages-quiz.html.twig', { 'formres': form.sondages_quiz_reponses.vars.prototype }) }} {% endfilter %}"></div>
	
	<div class = "row separator"></div>
	<div class = "row separator"></div>
	
	<div class="row">
		<div class="col-lg-12 col-md-12 col-sm-12">
			<a id = "add-field-link-reponse-__opt_questions__" class="add-field-link add add-field-link-reponse" href="#">ajouter une reponse (<span class="custom-field-allowed-container">7</span> maximum)</a>
		</div>
	</div>
	
	<div class = "row separator"></div>
	
	<div class="row">
		<div class="col-lg-6 col-md-6 col-sm-6">
			<div class = "check-reponse-obligatoire">
				<p class = "check-reponse-obligatoire-libelle">
					<span class = "libelle-mode">réponse obligatoire</span>
				</p>
				<p class = "check-reponse-obligatoire-check">
					{{ form_widget(form.est_reponse_obligatoire, {'attr': {'class': 'form-field-mandatory styled-checkbox'}}) }}
					<label for="{{ form.est_reponse_obligatoire.vars.id }}"><span></span></label> 
				</p>
				<div style = "clear:both;"></div>
			</div>
		</div>
		
		<div class="col-lg-6 col-md-6 col-sm-6">
			<div class = "legende-choix-sondages-quiz" style = "display:none;">
				<p class = "legende-choix-sondages-quiz-check">
					<label><span></span></label> 
				</p>
				<p class = "legende-choix-sondages-quiz-libelle">
					<span class = "libelle-mode">activer pour la/les bonne(s) réponse(s)</span>
				</p>
				<div style = "clear:both;"></div>
			</div>
		</div>
	</div>
	
	<div class = "row separator"></div>
</div>