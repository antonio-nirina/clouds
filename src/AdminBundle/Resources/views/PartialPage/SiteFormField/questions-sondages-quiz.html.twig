<div id = "content-block-question-__opt_questions__" class = "content-block-question">
	<div class = "row separator"></div>
	<div class="row">
		<div class="col-8 col-lg-4 col-md-4 col-sm-4 col-xl-4 titre-section-sondage-quiz">
			<span>QUESTION __question_num__<input class = "iterationQuestionForm" type = "hidden" name = "iterationQuestionForm" value = "0"></span>
		</div>
		
		<div class="col-4 col-lg-8 col-md-8 col-sm-8 col-xl-8">
			<div id = "ligne-separator-question-__opt_questions__" class = "ligne-separator-question-hide">&nbsp;</div>
		</div>
	</div>

	<div id = "content-questionnaire-apercu-__opt_questions__" class = "content-questionnaire-apercu" style = "display:none;">
										
		<div class="row">
			<div class="col-12 col-sm-8 col-md-8">
				<h3 id = "h3-block-title-__opt_questions__" class="hidden-sm-down block-title">Questions vide</h3>
				<h5 id = "h5-block-title-__opt_questions__" class="hidden-md-up block-title">Questions vide</h5>
			</div>
			<div class="col-12 col-sm-4 col-md-4">
				<div class="option-container-question">
					<span id = "edit-post-questions-__opt_questions__" class="edit-post-questions"></span>
					<span class="delete-post-questions" data-toggle = "modal" data-target = "#confirm-delete-question-dialog-__opt_questions__"></span>
					<span class="trie-post-questions">
						<a id="reorder-up-field-row-link-question-__opt_questions__" href="#" class="reorder-up-field-row-link-question"></a>
						<a id="reorder-down-field-row-link-question-__opt_questions__" href="#" class="reorder-down-field-row-link-question"></a>
					</span>
				</div>
			</div>
		</div>
		
		<!-- dialog - confirmation suppression questionnaires -->
		<div id="confirm-delete-question-dialog-__opt_questions__" class="modal fade confirm-delete-question-dialog" tabindex="-1" role="dialog">
			<div class="modal-dialog modal-lg" role="document">
				<div class="modal-content">
					<div class="modal-header">
						<a class="close-modal" data-dismiss="modal" aria-label="Close"></a>
					</div>
					<div class="modal-body">
						<div class="modal-body-container">
							<div class="text-container">
								<span class="confirm-dialog-title">Suppression</span>
								<p class="message">Êtes-vous sûr de vouloir supprimer définitivement ?</p>
							</div>
							<div>
								<button id = "id-confirm-delete-question-__opt_questions__" class ="btn-valider confirm-delete-question">
									valider
								</button>
							</div>
						</div>
					</div>
					<input type="hidden" name="edito_post_id" value="">
				</div>
			</div>
		</div>
		<!-- FIN - dialog - confirmation suppression questionnaires -->
	</div>

	<div id = "content-questionnaire-__opt_questions__" class = "content-questionnaire">
		<div class = "row separator"></div>
		
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<label class="champForm">
					<span class="lib-form">votre question</span>
					{{ form_widget(form.questions, {'attr': {'class': 'input-form-text'}}) }}
					<span class="delete-input"></span>
				</label>
			</div>
		</div>
		
		<div class = "row separator"></div>
		
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<label class="champForm">
					<span class="lib-form">commentaire</span>
					{{ form_widget(form.commentaire, {'attr': {'class': 'small-textarea'}}) }}
				</label>
			</div>
		</div>
		
		<div class = "row separator"></div>
		
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<label class="champForm">
					<span class="lib-form">type de question</span>
					<span class = "content-dropdown-toggle dropdown clearable filtres">
						<button class="btn btn-secondary dropdown-toggle dropdownMenuActionTypeQuestion" type="button" id="dropdownMenuActionTypeQuestion-__opt_questions__" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-default="ACTIONS">
							cases à cocher
						</button>
						<div id = "dropdownMenuListeTypeUestion-__opt_questions__" class="dropdown-menu dropdownMenuListeTypeUestion" aria-labelledby="dropdownMenuListeTypeUestion">
							<a class="dropdown-item" data-id = "__opt_questions__" href="#">
								cases à cocher
							</a>
							<a class="dropdown-item" data-id = "__opt_questions__" href="#">
								choix multiples
							</a>
							<a class="dropdown-item" data-id = "__opt_questions__" href="#">
								échelle linéaire
							</a>
							<a class="dropdown-item" data-id = "__opt_questions__" href="#">
								tableau à choix mutltiples
							</a>
						</div>
					</span>
				</label>
				{{ form_widget(form.type_question, {'attr': {'class': 'hidden'}}) }}
				{{ form_widget(form.ordre, {'attr': {'class': 'input-form-text-reponse ordre-questions hidden'}}) }}
			</div>
		</div>
		
		<div class = "row separator"></div>
		<div class = "row separator"></div>
		
		<input id = "nbre_reponses_par_questions___opt_questions__" class = "nbre_reponses_par_questions" type = "hidden" value = "0">
		
		<div id="collectionReponses-__opt_questions__" data-prototype-reponse="{% filter escape %} {{ include('AdminBundle:PartialPage/SiteFormField:reponses-sondages-quiz.html.twig', { 'formres': form.sondages_quiz_reponses.vars.prototype }) }} {% endfilter %}"></div>
		
		<div class = "row separator"></div>
		<div class = "row separator"></div>
		
		<div class="row">
			<div class="col-lg-12 col-md-12 col-sm-12">
				<a id = "add-field-link-reponse-__opt_questions__" class="add-field-link add add-field-link-reponse" data-type = "0" href="#">ajouter une reponse (<span class="custom-field-allowed-container">7</span> maximum)</a>
			</div>
		</div>
		
		<div class = "row separator"></div>
		
		<div class="row">
			<div class="col-lg-6 col-md-6 col-sm-6">
				<div class = "check-reponse-obligatoire">
					<p class = "check-reponse-obligatoire-libelle">
						<span class = "libelle-mode">réponse obligatoire</span>
					</p>
					<p class = "check-reponse-obligatoire-check">
						{{ form_widget(form.est_reponse_obligatoire, {'attr': {'class': 'form-field-mandatory styled-checkbox'}}) }}
						<label for="{{ form.est_reponse_obligatoire.vars.id }}"><span></span></label> 
					</p>
					<div style = "clear:both;"></div>
				</div>
			</div>
			
			<div class="col-lg-6 col-md-6 col-sm-6">
				<div class = "legende-choix-sondages-quiz" style = "display:none;">
					<p class = "legende-choix-sondages-quiz-check">
						<label><span></span></label> 
					</p>
					<p class = "legende-choix-sondages-quiz-libelle">
						<span class = "libelle-mode">activer pour la/les bonne(s) réponse(s)</span>
					</p>
					<div style = "clear:both;"></div>
				</div>
			</div>
		</div>
		
		<div class = "row separator"></div>
	</div>
</div>