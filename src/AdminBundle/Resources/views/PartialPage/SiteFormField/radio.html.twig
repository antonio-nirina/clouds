{% extends "AdminBundle:PartialPage/SiteFormField:base.html.twig" %}
{% block content %}
    <dl class="dl-horizontal row">
        <dt class="col-12 col-md-5"><label>{{ field.label }} {{ field.mandatory ? '*' : '' }}</label></dt>
        <dd class="col-12 col-md-7">
            {% if(choices is defined and choices is not empty) %}
                {% for key, choice in choices %}
                    <div class="champs-form-radio">
                        <span class="input-radio"></span>
                        <span class="input-libelle-radio">{{ key }}</span>
                    </div>
                {% endfor %}
            {% endif %}
        </dd>
    </dl>
{% endblock %}
