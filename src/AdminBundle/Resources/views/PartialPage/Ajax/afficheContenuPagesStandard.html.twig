<label class = "champForm">
	<span class = "lib-form block editeur">texte</span>
	{% if Page.ContenuPage is defined %}
		<textarea id="login_portal_data_form_text" name="contenu_page" class="large-textarea">{{ Page.ContenuPage }}</textarea>
	{% else %}
		<textarea id="login_portal_data_form_text" name="contenu_page" class="large-textarea"></textarea>
