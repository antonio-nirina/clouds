<label class = "champForm">
	<span class = "lib-form">nom du menu</span>
	{% if Page.NomPage is defined %}
		<input class = "input-form-text" type = "text" name = "menu_page" value = "{{ Page.NomPage }}" placeholder = "{{ Page.NomPage }}" style = "padding-left:10px!important;">
	{% elseif Page.PageName is defined %}
		<input class = "input-form-text" type = "text" name = "menu_page" value = "{{ Page.PageName }}" placeholder = "{{ Page.PageName }}" style = "padding-left:10px!important;">
	{% else %}
		<input id = "input-menu-{{ idpagehtml }}" class = "input-form-text renomer-page" type = "text" name = "menu_page" value = "{{ NewPage }}" placeholder = "{{ NewPage }}" style = "padding-left:10px!important;">
	{% endif %}
</label>

<div class = "clearBoth"></div>


<label class = "champForm">
	<span class = "lib-form">titre</span>
	{% if Page.NomPage is defined %}
		<input style = "padding-left:10px!important;" class = "input-form-text" type = "text" name = "titre_page" value = "{{ Page.NomPage }}" placeholder = "{{ Page.NomPage }}">
	{% elseif Page.PageName is defined %}
		<input style = "padding-left:10px!important;" class = "input-form-text" type = "text" name = "titre_page" value = "{{ Page.PageName }}" placeholder = "{{ Page.PageName }}">
	{% else %}
		<input id = "input-titre-{{ idpagehtml }}" style = "padding-left:10px!important;" class = "input-form-text" type = "text" name = "titre_page" value = "{{ NewPage }}" placeholder = "{{ NewPage }}">
	{% endif %}
</label>

