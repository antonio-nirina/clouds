                    <a class="navbar-brand abs" href="#"></a>
                </nav>
            </div>
        </div>

        <div class = "row">
            <div class = "col-12 col-md-12">
                <section class="fieldset active with-bottom-space">
                    <div class="row">
                        <div class="col-12 col-md-9">
                            <h3 class="hidden-sm-down block-title">Sur mesure</h3>
                            <h5 class="hidden-md-up block-title">Sur mesure</h5>
                        </div>
                        <div class="col-12 col-md-3">
                            <div class="hidden-sm-down corner-circle-img img-emailing-custom rounded-circle"></div>
