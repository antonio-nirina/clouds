{% if list is not empty %}
    {% for campaign_data in list %}
        {% set li = campaign_data['campaign_draft_data'] %}
        {% set overview = campaign_data['campaign_overview_data'] %}
        <div class="row campaign-{{li.id}}">
            <div class="campagne-name">
                <input type="checkbox" class="styled-checkbox bigger" id="{{li.id}}">
                <label for="{{li.id}}">
                    <span></span>
                    <div class="campagne-name-name">
                        {{ li.title }}
                    </div>
                    {% set class= "" %}
                    {% if li.status == 2 or (li.status == -1 and li.deliveredAt != '') %}
                        {% set date = li.deliveredAt %}
                        {% set status = "Envoyé" %}
                        {% set pre = "" %}
                        {% set class= "" %}
                    {% elseif li.status == 1 %}
                        {% set date = li.deliveredAt %}
                        {% set status = "Programmé" %}
                        {% set pre = "" %}
                        {% set class= "programmed" %}
                    {% elseif li.status == 0 or (li.status == -1 and li.deliveredAt == '') %}
                        {% set date = li.modifiedAt %}
                        {% set status = "En attente" %}
                        {% set pre = "modifié " %}
                        {% set class= "wait" %}
                    {% endif %}
                    <div class="campagne-name-date {{ class }}">
                        {% if li.status == -1 or li.status == 0 or li.status == 1 or li.status == 2 %}
                            {{ status }} - {{ pre }}{{ date | localizeddate('none', 'none', locale, null, "'le' d MMMM Y 'à' H:mm") }}
                        {% endif %}
                    </div>
                </label>
            </div>
            <div class="campagne-metric">
                <div class="metric-1">
                    <span class="metric-value">
                        {#{{ (li.recipients["recipient_count"] is defined)?li.recipients["recipient_count"]:0 }}#}
                        {% set recipient_value = 0 %}
                        {% if overview is not null %}
                            {% set recipient_value = overview['ProcessedCount'] %}
                        {% endif %}
                        {{ recipient_value }}
                    </span>
                    <span class="metric-desc">inscrits</span>
                </div>
                <div class="metric-2">
                    <span class="metric-value">
                        {#{{ (li.openTracked is defined)?li.openTracked:0 }} %#}
                        {% set open_value = 0 %}
                        {% if overview is not null and overview['ProcessedCount'] > 0 %}
                            {% set open_value = overview['OpenedCount']/overview['ProcessedCount']*100 %}
                        {% endif %}
                        {{ open_value~' %' }}
                    </span>
                    <span class="metric-desc">ouvertures</span>
                </div>
                <div class="metric-3">
                    <span class="metric-value">
                        {#{{ (li.clickTracked is defined)?li.clickTracked:0}} %#}
                        {% set click_value = 0 %}
                        {% if overview is not null and overview['ProcessedCount'] > 0 %}
                            {% set click_value = overview['ClickedCount']/overview['ProcessedCount']*100 %}
                        {% endif %}
                        {{ click_value~' %' }}
                    </span>
                    <span class="metric-desc">clics</span>
                </div>
            </div>
            <div class="campagne-action">
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuAction" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" data-default="ACTIONS">
                        ACTIONS
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuAction">
                        {% if archived_mode is not defined %}
                        <a class="dropdown-item" href="#">STATISTIQUES</a>
                        {% endif %}
                        <a class="dropdown-item campaign-preview" data-url="{{ li.url }}" style = "cursor:pointer;">APERÇU</a>
                        <a class="dropdown-item campaign-replicate" href="#">DUPLIQUER</a>
                        {% if archived_mode is not defined %}
                        <a class="dropdown-item campaign-rename" href="#">ARCHIVER</a>
                        {% endif %}
                        <input type="hidden" name="campaign-id" value="{{ li.id }}">                                           
                    </div>
                </div>
            </div>                            
        </div>
    {% endfor %}  
{% else %}
    <div class="no-result">Aucun résultat trouvé</div>
{% endif %}