{% if duplicate_template_form is defined %}
    {{ form_start(duplicate_template_form, {"attr": {"novalidate": "novalidate"}}) }}
<div class="content-container">
    <span class="dialog-title">dupliquer le modèle</span>
    <div class="form-element-container">
        <div>
            {#<label>nom du nouveau modèle</label>#}
            {{ form_label(duplicate_template_form.name, "nom du nouveau modèle") }}
        </div>
        <div>
            <div class="input-container">
                {#<input type="text" class="input-text semi-large-input-text">#}
                {{ form_widget(duplicate_template_form.name, {"attr": {"class": "input-text semi-large-input-text removable-content-input"}}) }}
                {% set delete_input_visibility = 'style=display:none' %}
                {% if duplicate_template_form.vars.value.name | trim is not empty %}
                    {% set delete_input_visibility = '' %}
                {% endif %}
                <span class="delete-input" {{ delete_input_visibility }}></span>
            </div>
            <div class="error-message-container">
                {{ form_errors(duplicate_template_form.name) }}
            </div>
        </div>
    </div>
    {{ form_widget(duplicate_template_form.duplication_source_id, {"attr": {"class": "duplication-source-id"}}) }}
</div>
<div class="button-container">
    <button class ="btn-valider save save-duplication" data-target-url="{{ path("admin_communication_emailing_templates_duplicate_template", {"template_id": duplicate_template_form.vars.value.duplicationSourceId}) }}">
        enregistrer
    </button>
    <button class ="btn-valider cancel cancel-duplication">
        annuler
    </button>
</div>
    {{ form_end(duplicate_template_form) }}
{% endif %}