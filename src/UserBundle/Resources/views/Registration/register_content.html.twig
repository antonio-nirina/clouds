{% block stylesheets %}
	<link href="{{ asset("css/register.css") }}" rel="stylesheet">
{% endblock %}
{#{% form_theme form 'bootstrap_3_layout.html.twig' %}#}
<nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse menu-niv-1 registre">
	<button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#collapsingNavbarNiv1">
		<span class="navbar-toggler-icon"></span>
	</button>
	{{ render(controller("AdminBundle:Parametrages:logoLogin")) }}
	<div class="navbar-collapse collapse" id="collapsingNavbarNiv1">
		<div class="navbar-nav form-connexion col-12 col-sm-12 col-md-8 col-lg-8 col-xl-6 offset-md-2 offset-lg-4 offset-xl-6">
			
		</div>
	</div>
	<div class="deconnect">
		<a href="{{ path("fos_user_security_logout") }}"></a>
	</div>
</nav>
<main>
	{% trans_default_domain 'FOSUserBundle' %}
	<div class="container slide">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="challenge">
					<img src="{{asset("images/cloudsRewards/slide-1024.jpg")}}">
				</div>
				<hr>
				<div class="text">
					<div class="inscription"><h4>formulaire d'inscription</h4></div>
					<div class="symbole"><img src="{{asset("images/cloudsRewards/salut.png")}}"class="rounded-circle salut"></div>
					<div class="titre">
						<div class="bienvenu"><h4>Bienvenu sur le challenge 2017!</h4></div>
						<div class="message">
							Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod
							tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
							quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo
							consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse
							cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non
							proident, sunt in culpa qui officia deserunt mollit anim id est laborum.
						</div>
					</div>
				</div>
				{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'form'}}) }}
					 <div class="checkbok civility">
					 	{{form_label(form.civility,'civilité*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					 	<label>
					 		{{form_widget(form.civility, { 'attr' : { 'class': 'checkbox' } })}}
					 	</label>
					    
					  </div>
					    <div class="form-group row">
					    	{{form_label(form.name,'prénom*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					    	<div class="col-6">
					    		{{form_widget(form.name,{ 'attr' : { 'class': 'form-control' } })}}
					    	</div>
					    </div>
					     <div class="form-group row">
					     	{{form_label(form.firstname,'nom*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					     	<div class="col-6">
					     		{{form_widget(form.firstname,{ 'attr' : { 'class': 'form-control' } })}}
					     	</div>					    	
					    </div>
					    <div class="form-group row">
					    	{{form_label(form.email.first,'email*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					    	<div class="col-6">
					    		{{form_widget(form.email.first,{ 'attr' : { 'class': 'form-control' } }) }}
					    	</div>					    	
					    </div>
					    <div class="form-group row">
					    {{form_label(form.email.second,'confirmation e-email*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					    	<div class="col-6">
					    		{{form_widget(form.email.second,{ 'attr' : { 'class': 'form-control' } }) }}
					    	</div>					    	
					    </div>
					     <div class="form-group row">
					     	{{form_label(form.phone,'téléphone*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					     	<div class="col-6">
					     		{{form_widget(form.phone,{ 'attr' : { 'class': 'form-control' } })}}
					     	</div>					    	
						</div>
						<div class="form-group row">
					{{form_label(form.plainPassword.first,'mot de passe*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
							<div class="col-6">
								{{form_widget(form.plainPassword.first,{ 'attr' : { 'class': 'form-control' } }) }}
							</div>
						</div>
					   <div class="form-group row">
					   	{{form_label(form.plainPassword.second,'confirmation mot de passe*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					   	<div class="col-6">
					   		{{form_widget(form.plainPassword.second,{ 'attr' : { 'class': 'form-control' } }) }}
					   	</div>
					   </div>
					    <div class="form-group row">
					    	{{form_label(form.societe,'société*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					    	<div class="col-6">
					    		 {{form_widget(form.societe,{ 'attr' : { 'class': 'form-control' } })}}
					    	</div>
					    </div>
					   <div class="form-group row">
					   	{{form_label(form.address_1,'adresse postal*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					   	<div class="col-6">
					   		{{form_widget(form.address_1,{ 'attr' : { 'class': 'form-control' } })}}
					   	</div>
					   </div>
					    <div class="form-group row">
					    		{{form_label(form.postal_code,'code postal*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					    	<div class="col-6">
					    		{{form_widget(form.postal_code,{ 'attr' : { 'class': 'form-control' } })}}
					    	</div>
					    </div>
					    <div class="form-group row">
					    	{{form_label(form.city,'ville*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					    	<div class="col-6">
					    		{{form_widget(form.city,{ 'attr' : { 'class': 'form-control' } })}}
					    	</div>
					    </div>
					    <div class="checkbok condtion">
					    	{{form_label(form.accepte,'acceptation du réglement*',{ 'label_attr': {'class': 'col-sm-4 col-form-label col-form-label-sm'} })}}
					    	<label>
					    		{{form_widget(form.accepte)}}
					    	</label>
					    </div>					    
					    
					    {{form_widget(form.recaptcha,{'attr': {'class': 'recaptcha'}})}}
				<div class="valide">
	    			<input type="submit" value="valider" class="btn-valider valide-user" />
	    		</div>
	       			
				{{ form_end(form) }}
	    	<div>
		</div>
	</div>
</main>

{% block footer %}
		{% embed 'UserBundle::footer.html.twig' %}{% endembed %}
{% endblock %}
