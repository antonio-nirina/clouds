<div class="container">

<div class="row">
<div class="col-12 logo">
	<img src = "{{ asset('images/cloudsRewards/logo-cloud-rewards.png') }}" alt = "" title = "">
</div>
</div>

<div class="row">
	<div class="col-sm-6 offset-3">
		
		<div class="form-box">
			<div class="form-top">
				<div class="form-top-left">
					<h3>Changer votre mot de passe</h3>
				</div>
				<div class="form-top-right">
					<i class="fa fa-key"></i>
				</div>
				<div class = "error_form">{{ form_errors(form.plainPassword.first) }}</div>
			</div>
			<div class="form-bottom">
				
				<form role="form" action="{{ path("admin_first_log") }}" method="post" class="user_change_password">
					{{ form_widget (form._token) }}
					<div class="form-group">
						{{ form_widget (form.plainPassword.first, {'attr': {'placeholder': 'Taper votre mot de passe', 'class':'form-control'}}) }}
					</div>
					<div class="form-group">
						{{ form_widget (form.plainPassword.second, {'attr': {'placeholder': 'Confirmer votre mot de passe', 'class':'form-control'}}) }}
					</div>

					<button type="submit" class="btn" name="_submit">Changer votre mot de passe</button>
				</form>
			</div>
		</div>
		
	</div>
</div>

</div>

